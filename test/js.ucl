const indent = inline fn() {
	@addCodeGen("\t");
};

@onCodeGen("start", fn() {
	@addTopCodeGen("\"use strict\";\n");
	@addTopCodeGen("const symbols = {};\n");
});

@onCodeGen("string", fn(text: comptime String) {
	@addCodeGen("\"", text, "\"");
});

@onCodeGen("identifier", fn(name: comptime String) {
	@addCodeGen(name);
});

@onCodeGen("fn_arg", fn(name: comptime String, type: comptime Type, more: comptime Bool) {
	@addCodeGen(name);
	if (more) {
		@addCodeGen(",");
	}
});

@onCodeGen("fn", fn(name: comptime String, argumentText: comptime String, codeBlockText: comptime String) {
	@addCodeGen("symbols[\"");
	@addCodeGen(name);
	@addCodeGen("\"] = (");
	@addCodeGen(argumentText);
	@addCodeGen(") => {\n");
	@addCodeGen(codeBlockText);
	@addCodeGen("}\n");
});

@onCodeGen("call_arg", fn(thing: comptime String, more: comptime Bool) {
	@addCodeGen(thing);
	if (more) {
		@addCodeGen(",");
	}
});

@onCodeGen("call", fn(name: comptime String, argumentText: comptime String) {
	indent();
	@addCodeGen("symbols[\"");
	@addCodeGen(name);
	@addCodeGen("\"](");
	@addCodeGen(argumentText);
	@addCodeGen(");\n");
});

const log = fn(string: String) {
	indent();
	@addCodeGen("console.log(");
	string;
	@addCodeGen(");\n");
};